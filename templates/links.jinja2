{% macro person_link(slug, people) -%}
{% set person = people[slug] %}
<a href="/people/{{slug}}" class="person_link">
  <div>
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" width="13px">
      <path
        d="M10 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6ZM3.465 14.493a1.23 1.23 0 0 0 .41 1.412A9.957 9.957 0 0 0 10 18c2.31 0 4.438-.784 6.131-2.1.43-.333.604-.903.408-1.41a7.002 7.002 0 0 0-13.074.003Z" />
    </svg>
    <span>{{
      person.nameFirst }} {{ person.nameLast }}</span>
  </div>
</a>

{%- endmacro %}

{% macro production_link(slug, productions) -%}
{% set production = productions[slug] %}
<a href="/productions/{{slug}}">
  {{production.title}}</a>
{%- endmacro %}

